<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cinemobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_1</item>
        <item name="colorPrimaryVariant">@color/color_3</item>
        <item name="colorOnPrimary">@color/color_4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tab_layout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="header_large" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/color_1</item>
    </style>

    <style name="header_medium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/color_1</item>
    </style>

    <style name="header_small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/color_1</item>
    </style>

    <style name="dialog_scale_animation_style" parent="android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
</resources>